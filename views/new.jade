extends layout

block content
	h1= title
	div.main
		div.newNote
			form( method="post")
				div.noteContent
					span.titleLabel Note :
					textarea(type="text", name="note",id="newNoteTitle")
				div.noteReminder
					span.titleLabel Reminder Date : 
					input(type='text' class="datepicker" name="reminderDate" id="reminderDate")
				div.submitter
					input(type="submit",value="Save Note" class='btn btn-primary')
		a( class='addmargin' href="/")!= "Node List"

		div.errors
			-var i= -1
				- ++ i
				for err in pageErrors
					span.error #{err}
